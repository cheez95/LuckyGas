# LuckyGas Cloud Services Configuration
# Copy this file to .env and fill in your API keys

# Google Cloud Platform
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_google_project_id_here

# MapBox (Alternative mapping service)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# OpenRouteService (Vehicle routing)
ORS_API_KEY=your_openrouteservice_key_here

# Twilio (SMS/WhatsApp notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# SendGrid (Email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@luckygas.com
SENDGRID_FROM_NAME=LuckyGas Delivery

# Optional: HERE Maps (Traffic data)
HERE_APP_ID=your_here_app_id
HERE_APP_CODE=your_here_app_code

# Optional: TomTom (Alternative routing)
TOMTOM_=your_tomtom_key_here

# Application Settings
ENABLE_REAL_TIME_TRACKING=true
ENABLE_TRAFFIC_DATA=true
ENABLE_NOTIFICATIONS=true
DEFAULT_TIMEZONE=Asia/Taipei
TRACKING_UPDATE_INTERVAL=30
ROUTE_OPTIMIZATION_ALGORITHM=or-tools
MAX_ROUTE_CALCULATION_TIME=60

# Web Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# API Configuration
API_BASE_URL=http://localhost:8000/api
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Frontend Features
ENABLE_ADVANCED_SEARCH=true
ENABLE_EXPORT=true
ENABLE_DEBUG_MODE=true

# Security Settings
CSRF_TOKEN_EXPIRY=86400000
SESSION_TIMEOUT=1800000

# CORS Configuration
# Options: development, staging, production
ENVIRONMENT=development

# For staging environment
# STAGING_DOMAIN=staging.luckygas.com

# For production environment (comma-separated list of domains)
# PRODUCTION_DOMAIN=luckygas.com
# ALLOWED_DOMAINS=luckygas.com,app.luckygas.com

# UI Settings
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
NOTIFICATION_DURATION=3000
EOF < /dev/null